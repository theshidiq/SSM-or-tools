# Server Configuration for AI Processing
# Copy this to .env in the server directory and configure as needed

# Server Settings
SERVER_PORT=3001
CLIENT_URL=http://localhost:3000
NODE_ENV=development

# AI Processing Settings
ENABLE_AI_PROCESSING=true
MAX_CONCURRENT_REQUESTS=5
PROCESSING_TIMEOUT=120000

# TensorFlow Settings
TF_BACKEND=cpu
ENABLE_TF_OPTIMIZATIONS=true
MAX_TENSOR_MEMORY=512

# Security Settings
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
ENABLE_CORS=true

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Performance
ENABLE_COMPRESSION=true
MEMORY_CLEANUP_INTERVAL=30000

# Optional: Database connection for model persistence
# DATABASE_URL=postgresql://user:password@localhost:5432/shift_schedule

# Optional: Redis for caching
# REDIS_URL=redis://localhost:6379

# Optional: Model storage path
# MODEL_STORAGE_PATH=./models