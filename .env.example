# Environment Variables Template for Shift Schedule Manager
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application environment (development, staging, production)
NODE_ENV=production
REACT_APP_ENVIRONMENT=production

# Application version (auto-populated by CI/CD or set manually)
APP_VERSION=1.0.0
REACT_APP_VERSION=1.0.0

# =============================================================================
# API AND SERVER CONFIGURATION
# =============================================================================

# Base URL for API requests (adjust for your domain)
REACT_APP_API_BASE_URL=http://localhost/api

# CORS origin for server (set to your frontend domain in production)
CORS_ORIGIN=http://localhost

# Server port (internal container port)
PORT=3001

# =============================================================================
# SUPABASE CONFIGURATION (Optional - for cloud data sync)
# =============================================================================

# Supabase project URL
REACT_APP_SUPABASE_URL=https://your-project.supabase.co

# Supabase anon/public key
REACT_APP_SUPABASE_ANON_KEY=your-anon-key-here

# Development environment Supabase (optional separate instance)
REACT_APP_SUPABASE_URL_DEV=https://your-dev-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY_DEV=your-dev-anon-key-here

# =============================================================================
# GOOGLE SERVICES INTEGRATION (Optional)
# =============================================================================

# Google Vision API for photo import feature
REACT_APP_GOOGLE_VISION_API_KEY=your-google-vision-api-key

# Google Sheets API for export functionality
REACT_APP_GOOGLE_SHEETS_API_KEY=your-google-sheets-api-key

# Google Apps Script URL for bidirectional sync
REACT_APP_GOOGLE_APPS_SCRIPT_URL=https://script.google.com/macros/s/your-script-id/exec

# Development environment Google APIs (optional)
REACT_APP_GOOGLE_VISION_API_KEY_DEV=your-dev-vision-api-key

# =============================================================================
# DATABASE CONFIGURATION (Optional - if not using Supabase)
# =============================================================================

# PostgreSQL database configuration
POSTGRES_DB=shift_schedule
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here

# =============================================================================
# TENSORFLOW.JS OPTIMIZATION
# =============================================================================

# Force CPU backend for TensorFlow.js (set to true for CPU-only environments)
TFJS_FORCE_CPU=false

# TensorFlow.js backend selection (webgl, cpu, tensorflow)
TFJS_BACKEND=tensorflow

# =============================================================================
# MONITORING AND LOGGING (Optional)
# =============================================================================

# Grafana admin password for monitoring dashboard
GRAFANA_PASSWORD=admin

# Log level for server debugging
DEBUG=shift-schedule:*

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# JWT secret for session management (if implementing auth)
JWT_SECRET=your-jwt-secret-here

# Session secret for Express sessions
SESSION_SECRET=your-session-secret-here

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Node.js memory allocation (adjust based on your server resources)
NODE_OPTIONS=--max-old-space-size=4096

# UV thread pool size for better concurrency
UV_THREADPOOL_SIZE=4

# TensorFlow.js CPU optimization
TF_CPP_MIN_LOG_LEVEL=2

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable React Fast Refresh in development
FAST_REFRESH=true

# Enable file watching polling (useful in Docker environments)
CHOKIDAR_USEPOLLING=true

# Disable source maps in production for better performance
GENERATE_SOURCEMAP=false

# =============================================================================
# DOCKER AND DEPLOYMENT
# =============================================================================

# Number of AI server replicas for scaling
AI_SERVER_REPLICAS=2

# Docker build target (development, production, testing)
DOCKER_BUILD_TARGET=production

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Sentry DSN for error tracking (optional)
REACT_APP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics tracking ID (optional)
REACT_APP_GA_TRACKING_ID=GA-XXXXXXXXX

# Hotjar tracking ID for user analytics (optional)
REACT_APP_HOTJAR_ID=your-hotjar-id

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable photo import feature
REACT_APP_ENABLE_PHOTO_IMPORT=true

# Enable/disable AI assistant features
REACT_APP_ENABLE_AI_ASSISTANT=true

# Enable/disable advanced analytics
REACT_APP_ENABLE_ANALYTICS=true

# Enable/disable real-time features
REACT_APP_ENABLE_REALTIME=true

# =============================================================================
# WEBSOCKET BACKEND CONFIGURATION
# =============================================================================

# Enable WebSocket multi-table backend for settings (Phase 2-4 implementation)
# When true: Settings stored in 5 normalized database tables with version control
# When false: Settings stored in localStorage (legacy mode)
REACT_APP_WEBSOCKET_SETTINGS=true

# =============================================================================
# BACKUP AND MAINTENANCE
# =============================================================================

# Backup schedule for database (if using PostgreSQL)
BACKUP_SCHEDULE=0 2 * * *

# Retention period for logs (days)
LOG_RETENTION_DAYS=30

# =============================================================================
# LOAD BALANCING AND SCALING
# =============================================================================

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=30

# Maximum number of concurrent AI requests per server
MAX_CONCURRENT_AI_REQUESTS=10

# Request timeout for AI operations (milliseconds)
AI_REQUEST_TIMEOUT=300000

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Redis connection URL (if using Redis for caching)
REDIS_URL=redis://redis:6379

# Cache TTL for API responses (seconds)
CACHE_TTL=300

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================

# SSL certificate paths (uncomment for HTTPS)
# SSL_CERT_PATH=/etc/ssl/certs/your-cert.crt
# SSL_KEY_PATH=/etc/ssl/private/your-key.key

# Force HTTPS redirect
# FORCE_HTTPS=true