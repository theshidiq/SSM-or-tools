# Production Environment Variables Template
# Copy this file to .env for production deployment and fill in actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
REACT_APP_ENVIRONMENT=production
# APP_VERSION will be set by CI/CD pipeline
# REACT_APP_VERSION will be set by CI/CD pipeline

# =============================================================================
# API AND SERVER CONFIGURATION
# =============================================================================
# REACT_APP_API_BASE_URL=https://your-domain.com/api
# CORS_ORIGIN=https://your-domain.com
PORT=3001

# =============================================================================
# PRODUCTION OPTIMIZATIONS
# =============================================================================
GENERATE_SOURCEMAP=false
TF_CPP_MIN_LOG_LEVEL=2

# =============================================================================
# TENSORFLOW.JS CONFIGURATION
# =============================================================================
TFJS_BACKEND=tensorflow
TFJS_FORCE_CPU=false
NODE_OPTIONS=--max-old-space-size=4096
UV_THREADPOOL_SIZE=4

# =============================================================================
# FEATURE FLAGS (Production)
# =============================================================================
REACT_APP_ENABLE_PHOTO_IMPORT=true
REACT_APP_ENABLE_AI_ASSISTANT=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_REALTIME=true

# =============================================================================
# WEBSOCKET BACKEND CONFIGURATION
# =============================================================================
REACT_APP_WEBSOCKET_SETTINGS=true

# =============================================================================
# PERFORMANCE SETTINGS (Production)
# =============================================================================
HEALTH_CHECK_INTERVAL=30
MAX_CONCURRENT_AI_REQUESTS=10
AI_REQUEST_TIMEOUT=300000
CACHE_TTL=300
LOG_RETENTION_DAYS=30

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
AI_SERVER_REPLICAS=2
DOCKER_BUILD_TARGET=production

# =============================================================================
# SECURITY (Fill in actual values)
# =============================================================================
# JWT_SECRET=
# SESSION_SECRET=
# GRAFANA_PASSWORD=

# =============================================================================
# EXTERNAL SERVICES (Fill in actual values)
# =============================================================================
# REACT_APP_SUPABASE_URL=
# REACT_APP_SUPABASE_ANON_KEY=
# REACT_APP_GOOGLE_VISION_API_KEY=
# REACT_APP_GOOGLE_SHEETS_API_KEY=
# REACT_APP_GOOGLE_APPS_SCRIPT_URL=
# POSTGRES_PASSWORD=

