# Development Environment Variables
# This file contains safe default values for development

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
REACT_APP_ENVIRONMENT=development
APP_VERSION=1.0.0-dev
REACT_APP_VERSION=1.0.0-dev

# =============================================================================
# API AND SERVER CONFIGURATION
# =============================================================================
REACT_APP_API_BASE_URL=http://localhost:3001/api
CORS_ORIGIN=http://localhost:3000
PORT=3001

# =============================================================================
# DEVELOPMENT OPTIMIZATIONS
# =============================================================================
FAST_REFRESH=true
CHOKIDAR_USEPOLLING=true
GENERATE_SOURCEMAP=true
DEBUG=shift-schedule:*

# =============================================================================
# TENSORFLOW.JS CONFIGURATION
# =============================================================================
TFJS_BACKEND=tensorflow
TFJS_FORCE_CPU=false
TF_CPP_MIN_LOG_LEVEL=1
NODE_OPTIONS=--max-old-space-size=2048
UV_THREADPOOL_SIZE=4

# =============================================================================
# FEATURE FLAGS (Development)
# =============================================================================
REACT_APP_ENABLE_PHOTO_IMPORT=true
REACT_APP_ENABLE_AI_ASSISTANT=true
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_REALTIME=true

# =============================================================================
# WEBSOCKET BACKEND CONFIGURATION
# =============================================================================
# âœ… ENABLED: Required for Go server staffIds extraction fix
# Go server ToReactFormat() extracts staffIds array from JSONB (lines 254-268)
# Without this, settings bypass Go server and staffIds are lost on restart
REACT_APP_WEBSOCKET_SETTINGS=true

# =============================================================================
# PERFORMANCE SETTINGS (Development)
# =============================================================================
HEALTH_CHECK_INTERVAL=30
MAX_CONCURRENT_AI_REQUESTS=5
AI_REQUEST_TIMEOUT=180000
CACHE_TTL=60

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
AI_SERVER_REPLICAS=1
DOCKER_BUILD_TARGET=development